.head {
  position: fixed;
  width: 100%;
  top: 0;
  height: 50px;
  background-color: #455a64;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: white;
  z-index: 2;
}
.tea{
   border-top: 50px solid;
}
.select {
  font-size: 14px;
  color: black;
  width: 50%;
  text-align: center;
  height: 45px;
  line-height: 45px;
  border-bottom: 5px solid;
}

.default {
  font-size: 12px;
  margin: 0 auto;
  padding: 15px;
}

.hr {
  border: 1px solid #ccc;
  opacity: 0.2;
}

.single {
  display: flex;
  flex-direction: row;
  height: 50px;
}

.ac {
  padding: 15px;
  font-size: 14px;
  font-weight: bold;
  color: #666;
}

ipt {
  align-items: center;
}

.ipt input {
  text-align: left;
  margin-top: 10px;
  margin-left: 10px;
  width: 200px;
}

.placeholder-style {
  align-items: center;
}

.btn {
  position: absolute;
  right: 10px;
  top: 10px;
  width: 90px;
  font-size: 12px;
  color: #666;
  background-color: #f2f2f2;
}
.comfirm{
  margin-top: 120px;
  height: 30px;
  width: 100%;
  text-align: center;
}
